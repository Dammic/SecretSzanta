{
  "name": "SecretSzanta",
  "version": "0.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "clean": "rimraf public",
    "build": "webpack --mode development --config webpack.config.js --progress",
    "build:watch": "webpack --mode development --config webpack.config.js --watch --progress",
    "run": "node --experimental-modules server.mjs",
    "run:dev": "nodemon --experimental-modules server.mjs --watch utils/ --watch events/ --watch server.js",
    "dev": "npm-run-all --parallel build:watch run:dev",
    "eslint": "eslint ./src",
    "build:prod": "rimraf public && webpack --mode production --config webpack.config.js --progress",
    "test": "jest",
    "test:fe": "jest src/*",
    "test:silent": "NODE_HIDECONSOLE=true npm run test"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn run build:prod & yarn run test"
    }
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss)$": "identity-obj-proxy",
      ".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2)$": "<rootDir>/__mocks__/fileMock.js",
      "packages(.*)$": "<rootDir>/src/packages$1"
    },
    "testMatch": [
      "**/__tests__/**/*.?(m)js?(x)",
      "**/?(*.)(spec|test).?(m)js?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "mjs"
    ],
    "transform": {
      ".mjs": "babel-jest",
      ".js": "babel-jest"
    },
    "setupFiles": [
      "raf/polyfill",
      "./setupTests.js"
    ]
  },
  "authors": [
    "Damian Michalski",
    "Stanis≈Çaw Dawidowicz",
    "Marek Tkaczyk"
  ],
  "dependencies": {
    "classnames": "2.2.6",
    "font-awesome": "4.7.0",
    "history": "4.10.1",
    "lodash": "4.17.15",
    "moment": "2.24.0",
    "normalize.css": "8.0.1",
    "prop-types": "15.7.2",
    "react": "16.12.0",
    "react-addons-css-transition-group": "15.6.2",
    "react-custom-scrollbars": "4.2.1",
    "react-dom": "16.12.0",
    "react-redux": "7.1.3",
    "react-router": "5.1.2",
    "react-router-redux": "5.0.0-alpha.8",
    "react-transition-group": "4.3.0",
    "redux": "4.0.4",
    "redux-actions": "2.6.5",
    "redux-thunk": "2.3.0",
    "socket.io": "2.3.0",
    "socket.io-client": "2.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.7.4",
    "@babel/plugin-proposal-class-properties": "7.7.4",
    "@babel/plugin-transform-modules-commonjs": "7.7.4",
    "@babel/preset-env": "7.7.4",
    "@babel/preset-react": "7.7.4",
    "autoprefixer": "9.7.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "babel-plugin-lodash": "3.3.4",
    "compression-webpack-plugin": "3.0.0",
    "css-loader": "3.2.0",
    "ejs": "3.0.1",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.15.1",
    "eslint": "6.7.1",
    "eslint-config-airbnb": "18.0.1",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "23.0.5",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-lodash": "6.0.0",
    "eslint-plugin-react": "7.16.0",
    "express": "4.17.1",
    "express-static-gzip": "2.0.5",
    "faker": "4.1.0",
    "file-loader": "5.0.2",
    "fs": "0.0.1-security",
    "happypack": "5.0.1",
    "html-webpack-plugin": "4.0.0-alpha",
    "husky": "^3.1.0",
    "identity-obj-proxy": "3.0.0",
    "image-webpack-loader": "6.0.0",
    "jest": "24.9.0",
    "merge-stream": "2.0.0",
    "node-sass": "4.13.0",
    "nodemon": "2.0.1",
    "npm-run-all": "4.1.5",
    "optipng-bin": "6.0.0",
    "pngquant-bin": "5.0.2",
    "postcss": "7.0.23",
    "postcss-cli": "6.1.3",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.7.0",
    "react-test-renderer": "16.12.0",
    "regenerator-runtime": "0.13.3",
    "style-loader": "1.0.0",
    "units-css": "0.4.0",
    "url-loader": "3.0.0",
    "webpack": "4.41.2",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-cli": "3.3.10"
  }
}
